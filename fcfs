#include <iostream>
using namespace std;

void fcfs( int at[], int bt[], int size){
    int tat[3]={};
    int wt[3] ={};
   // ct use
   int count =1;
   int ct[3]= {};
   double awt=0;
   double atat=0;
   
  
  
   cout<<"FCFS"<<endl;
   cout<<endl;
   cout<<"PS  AT  BT  TAT  WT  CT"<<endl;
   
   //loop for ct
   for(int i = 0; i<size; i++){
       count = count +bt[i];
       ct[i]= count;
       tat[i] = ct[i]-at[i];
       wt[i] = tat[i]-bt[i];
       
       cout<<"P"<<i+1<<"   "<<at[i]<<"   "<<bt[i]<<"   "<<tat[i]<<"   "<<wt[i]<<"    "<<ct[i]<<endl;
   
      
   }

  for(int i : wt){
      awt+=i;
  }
  //average tarn around time
  for(int i : tat){
      atat+=i;
  }
   cout<<endl;
   cout<<"Average wating time : "<<awt/size<<endl;
   cout<<"Average turnaround time  : "<<atat/size<<endl;
}

int main() {
    //data
   int at[3]= {1,2,3};
   int bt[3]= {2,6,3};
   int size = sizeof(bt)/sizeof(bt[0]);
   fcfs(at,bt,size);
   
    return 0;
}
